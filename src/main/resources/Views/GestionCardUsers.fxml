<children>
    <HBox prefHeight="141.0" prefWidth="353.0" style="-fx-background-color: #131022;">
        <children>
            <Circle fx:id="ImageUser" fill="#393351" radius="24.0" stroke="BLACK" strokeType="INSIDE">
                <HBox.margin>
                    <Insets left="20.0" top="8.0" />
                </HBox.margin>
            </Circle>
            <Label fx:id="LoginUser" prefHeight="62.0" prefWidth="190.0" text="Login" textFill="WHITE">
                <HBox.margin>
                    <Insets left="20.0" />
                </HBox.margin></Label>
        </children>
        <VBox.margin>
            <Insets left="10.0" />
        </VBox.margin>
    </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="UpdateUser" mnemonicParsing="false" onAction="#UpdateUser" prefHeight="27.0" prefWidth="126.0" style="-fx-background-color: #131022; -fx-border-radius: 10; -fx-border-color: #fff;" text="Modifier" textFill="WHITE" />
