            <Button fx:id="BostUser" mnemonicParsing="false" onAction="#BostUser" prefHeight="27.0" prefWidth="141.0" style="-fx-background-color: #131022; -fx-border-radius: 10; -fx-border-color: #fff;" text="Booster" textFill="WHITE" />
         </children>
      </HBox>
</children>
</VBox>
